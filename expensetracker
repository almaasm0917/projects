  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
  body {
    padding-top: 20px;
  }
  #dashboard, #track-expense-page, #view-expenses-page, #budget-page {
    display: none;
  }
  #alerts {
    margin-top: 10px;
  }
</style>
